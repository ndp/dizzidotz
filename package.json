{
  "name": "dizzidotz",
  "version": "1.1.0",
  "description": "Circles, noises  Copyright(c) 2016-2021 All Rights Reserved",
  "main": "index.js",
  "dependencies": {
    "http-server": "*",
    "pilota": "^6",
    "rxjs": "^6",
    "tone": "*"
  },
  "devDependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/polyfill": "*",
    "@babel/preset-env": "*",
    "@babel/register": "*",
    "babel-loader": "*",
    "chai": "*",
    "css-loader": "*",
    "esbuild": "^0.11.15",
    "eslint": "*",
    "eslint-plugin-mocha": "*",
    "eslint-plugin-unused-imports": "^1.1.1",
    "file-loader": "*",
    "mini-css-extract-plugin": "*",
    "mocha": "*",
    "nyc": "*",
    "regenerator-runtime": "*",
    "simple-mock": "*",
    "style-loader": "*",
    "url-loader": "*"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "ignore": [
      "node_modules"
    ],
    "sourceMaps": true
  },
  "scripts": {
    "build:static": "rsync -c -r html build",
    "build": "yarn build:static && esbuild --bundle ./src/machine.js --inject:./src/pattern-drawer.js --outfile=build/bundle.js --minify --sourcemap",
    "start": "yarn build:static && esbuild --servedir=./build --bundle ./src/machine.js --inject:./src/pattern-drawer.js --outfile=./build/bundle.js --sourcemap",
    "server": "./node_modules/.bin/http-server build -e html -d false",
    "test": "mocha 'src/**/*spec.js'",
    "test:watch": "npm t -- --watch",
    "cover": "nyc npm t",
    "lint": "./node_modules/.bin/eslint src/*.js src/ndp-software/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com:ndp/dizzidotz.git"
  },
  "author": "Andrew J. Peterson, NDP Software",
  "license": "UNLICENSED",
  "private": true
}
